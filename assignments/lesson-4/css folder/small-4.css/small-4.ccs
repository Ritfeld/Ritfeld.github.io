* { margin: 0; padding: 0;}
body { background-color: #ddd; }
header { background-color: #bbb; text-align: center;}
h1 { padding: .5rem; }

nav {	margin: 0 auto;	max-width: 760px; background-color: #000;	}
.navigation { list-style: none; text-align: center; }
  .navigation li:first-child { display: block;}
  .navigation li { display: none;}
  .navigation a {	display: block;	color: #fff; padding: .75rem;	text-align: center;	text-decoration: none;}
  .navigation a:hover {	color: #000; background-color: #fff; font-weight: 700;	}

  /* the onclick JS toggles the .repsonsive class from display none (.navigation li) to display block because the repsonsive class is added to the end of the class list like this in HTML Line #6.
  <ul class="navigation responsive">
  */
	.responsive li { display: block; }

/* Media Query for medium + screens */
@media only screen and (min-width: 32.5em) {
  .navigation li:first-child { display: none;	}
	.navigation li { display: inline-block; margin-right: 1rem;}	
	.navigation li a { color: yellow;}
}

main {
    margin: 10px auto;
    width: 960px;
}

h1 {

    font-family: 'kusso one', sans-serif;
}

p {
   border: 1px solid #333;
   padding: 7px;
   background-color: #ddd;
   text-align: justify;
}